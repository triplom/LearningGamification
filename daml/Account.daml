-- Account.daml
module Account where

template Account
  with
    employee : Party
    bc_platform : Party
    points : Int
    timestamp : Time
  where
    signatory bc_platform
    observer employee

    choice AddPoints : ContractId Account
      with
        newPoints : Int
      controller employee
      do
        create Account with
          employee
          bc_platform
          points = points + newPoints
          timestamp