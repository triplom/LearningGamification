module Utility where

import Daml.Script  -- Importing Daml.Script module

-- Function to create parties from a list of names
makePartiesFrom : [Text] -> Script [Party]
makePartiesFrom names = 
  mapA allocateParty names  -- Maps the allocateParty function to each name in the list and returns a list of parties

-- Function to create parties with predefined names
makeParties : Script [Party]
makeParties =
  makePartiesFrom ["Marcel", "Andre", "Natacha", "Yonara", "bc_platform", "employee"]
